<h1>Eat the burger</h1>
<h2>Eat it...</h2>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
      <p>Burgers to eat</p>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
      <p>Burgers you've eaten</p>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h3>Or add your own</h3>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Enter a Burger Here">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>